---
interface Video {
  id: string;
  title: string;
  description?: string;
  videoUrl: string;
  thumbnail?: string;
  tags: string[];
}

interface Props {
  video: Video;
}

const { video } = Astro.props;
---

<div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300" data-tags={video.tags.join(',')}>
  <div class="aspect-video">
    <iframe
      src={video.videoUrl}
      title={video.title}
      frameborder="0"
      allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
      allowfullscreen
      class="w-full h-full"
    ></iframe>
  </div>
  <div class="p-4">
    <h3 class="text-xl font-semibold text-gray-800 dark:text-gray-100 mb-2">{video.title}</h3>
    {video.description && (
      <p class="text-gray-600 dark:text-gray-300 text-sm mb-3">{video.description}</p>
    )}
    <div class="flex flex-wrap gap-2">
      {video.tags.map((tag) => (
        <span class="px-3 py-1 bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 text-xs font-medium rounded-full">
          {tag}
        </span>
      ))}
    </div>
  </div>
</div>

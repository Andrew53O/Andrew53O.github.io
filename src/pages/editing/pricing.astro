---
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.astro';
import ThemeToggle from '../../components/ThemeToggle.astro';

const pricingPlans = [
  {
    name: 'Basic Editing',
    price: '3,000',
    duration: 'per video (up to 5 mins)',
    features: [
      'Basic cuts and transitions',
      'Color correction',
      'Audio normalization',
      'Text overlays',
      '1 round of revisions',
      '3-5 days delivery',
    ],
  },
  {
    name: 'Standard Editing',
    price: '6,000',
    duration: 'per video (up to 10 mins)',
    features: [
      'All Basic features',
      'Advanced transitions & effects',
      'Motion graphics',
      'Background music',
      'Subtitles in 1 language',
      '2 rounds of revisions',
      '5-7 days delivery',
    ],
    popular: true,
  },
  {
    name: 'Premium Editing',
    price: '12,000',
    duration: 'per video (up to 20 mins)',
    features: [
      'All Standard features',
      'Custom animations',
      'Advanced color grading',
      'Sound design',
      'Subtitles in 2 languages',
      '3 rounds of revisions',
      'Priority support',
      '7-10 days delivery',
    ],
  },
];

const additionalServices = [
  {
    name: 'Subtitle Generation',
    price: '800',
    unit: 'per minute',
    languages: 'Chinese, English, Indonesian',
  },
  {
    name: 'Extended Video Length',
    price: '500',
    unit: 'per additional minute',
    description: 'For videos exceeding package limits',
  },
  {
    name: 'Rush Delivery',
    price: '+50%',
    unit: 'of base price',
    description: '24-48 hour turnaround',
  },
  {
    name: 'Extra Revisions',
    price: '1,000',
    unit: 'per revision',
    description: 'Beyond included revisions',
  },
];
---

<Layout title="Pricing - Andrew's Video Editing Services">
  <ThemeToggle />
  <Navigation currentPath="/editing/pricing" />
  
  <main class="min-h-screen">
    <!-- Header -->
    <div class="bg-gradient-to-r from-blue-600 to-purple-600 dark:from-blue-800 dark:to-purple-900 text-white py-16">
      <div class="container mx-auto px-4 max-w-6xl text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">Pricing Plans</h1>
        <p class="text-lg md:text-xl max-w-2xl mx-auto">
          Professional video editing services tailored to your needs. All prices in NTD (New Taiwan Dollar).
        </p>
      </div>
    </div>

    <!-- Pricing Cards -->
    <div class="container mx-auto px-4 py-16 max-w-7xl">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
        {pricingPlans.map((plan) => (
          <div class={`bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden ${plan.popular ? 'ring-4 ring-blue-600 dark:ring-blue-500 transform scale-105' : ''}`}>
            {plan.popular && (
              <div class="bg-blue-600 text-white text-center py-2 font-semibold">
                Most Popular
              </div>
            )}
            <div class="p-8">
              <h3 class="text-2xl font-bold text-gray-800 dark:text-white mb-2">{plan.name}</h3>
              <div class="mb-6">
                <span class="text-4xl font-bold text-blue-600 dark:text-blue-400">NT${plan.price}</span>
                <span class="text-gray-600 dark:text-gray-400 block text-sm mt-1">{plan.duration}</span>
              </div>
              <ul class="space-y-3 mb-8">
                {plan.features.map((feature) => (
                  <li class="flex items-start">
                    <svg class="w-5 h-5 text-green-500 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    <span class="text-gray-700 dark:text-gray-300">{feature}</span>
                  </li>
                ))}
              </ul>
              <a 
                href="mailto:contact@example.com?subject=Interested in {plan.name}" 
                class={`block text-center font-semibold px-6 py-3 rounded-lg transition-colors duration-300 ${
                  plan.popular 
                    ? 'bg-blue-600 hover:bg-blue-700 text-white' 
                    : 'bg-gray-200 hover:bg-gray-300 dark:bg-gray-700 dark:hover:bg-gray-600 text-gray-800 dark:text-white'
                }`}
              >
                Get Started
              </a>
            </div>
          </div>
        ))}
      </div>

      <!-- Additional Services -->
      <div class="mt-16">
        <h2 class="text-3xl font-bold text-gray-800 dark:text-white mb-8 text-center">Additional Services</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-4xl mx-auto">
          {additionalServices.map((service) => (
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
              <div class="flex justify-between items-start mb-3">
                <h3 class="text-xl font-bold text-gray-800 dark:text-white">{service.name}</h3>
                <span class="text-blue-600 dark:text-blue-400 font-bold">
                  {service.price.startsWith('+') ? service.price : `NT$${service.price}`}
                </span>
              </div>
              <p class="text-gray-600 dark:text-gray-400 text-sm mb-2">{service.unit}</p>
              {service.description && (
                <p class="text-gray-600 dark:text-gray-300">{service.description}</p>
              )}
              {service.languages && (
                <p class="text-gray-600 dark:text-gray-300">
                  <span class="font-semibold">Languages:</span> {service.languages}
                </p>
              )}
            </div>
          ))}
        </div>
      </div>

      <!-- Contact CTA -->
      <div class="mt-16 text-center">
        <div class="bg-gradient-to-r from-blue-600 to-purple-600 dark:from-blue-800 dark:to-purple-900 rounded-lg p-8 max-w-3xl mx-auto">
          <h2 class="text-3xl font-bold text-white mb-4">Need a Custom Quote?</h2>
          <p class="text-white text-lg mb-6">
            Have a unique project or need bulk editing services? Let's discuss your requirements.
          </p>
          <a 
            href="mailto:contact@example.com?subject=Custom Quote Request" 
            class="inline-block bg-white text-blue-600 font-semibold px-8 py-3 rounded-full hover:bg-gray-100 transition-colors duration-300 shadow-lg"
          >
            Contact Me
          </a>
        </div>
      </div>
    </div>
  </main>

  <footer class="bg-gray-800 dark:bg-gray-950 text-white py-8 mt-16">
    <div class="container mx-auto px-4 text-center">
      <p class="mb-2">&copy; {new Date().getFullYear()} Andrew. All rights reserved.</p>
      <p class="text-gray-400 dark:text-gray-500">Professional Video Editing & Subtitle Services</p>
      <div class="mt-4">
        <a 
          href="/editing/contact" 
          class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold px-6 py-2 rounded-full transition-colors duration-300"
        >
          Contact Us
        </a>
      </div>
    </div>
  </footer>
</Layout>

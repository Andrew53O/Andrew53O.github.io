---
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.astro';
import Header from '../../components/Header.astro';
import VideoCard from '../../components/VideoCard.astro';
import ThemeToggle from '../../components/ThemeToggle.astro';
import { getCollection } from 'astro:content';

const videoEntries = await getCollection('videos');
const videos = videoEntries.map(entry => entry.data);
const allTags = Array.from(new Set(videos.flatMap(v => v.tags))).sort();
---

<Layout title="Full Portfolio - Andrew's Video Editing">
  <ThemeToggle />
  <Navigation currentPath="/editing/portfolio" />
  
  <!-- Portfolio Header -->
  <div class="bg-gradient-to-r from-blue-600 to-purple-600 dark:from-blue-800 dark:to-purple-900 text-white py-12">
    <div class="container mx-auto px-4 max-w-6xl">
      <h1 class="text-4xl md:text-5xl font-bold mb-4 text-center">Video Editing Portfolio</h1>
      <p class="text-lg md:text-xl mb-6 max-w-3xl mx-auto text-center">
        Hi, I'm Andrew! I'm a professional video editor specializing in creating compelling visual stories. 
        With expertise in corporate videos, brand storytelling, and social media content, I bring your vision to life 
        with precision and creativity.
      </p>
      <p class="text-md md:text-lg mb-6 max-w-2xl mx-auto text-center">
        I offer professional subtitle generation services in <span class="font-semibold">Chinese, English, and Indonesian</span>, 
        ensuring your content reaches a global audience with accuracy and cultural sensitivity.
      </p>
      <div class="text-center">
        <a 
          href="/editing/contact" 
          class="inline-block bg-white text-blue-600 dark:bg-gray-200 dark:text-blue-700 font-semibold px-8 py-3 rounded-full hover:bg-gray-100 dark:hover:bg-gray-300 transition-colors duration-300 shadow-lg"
        >
          Let's Talk
        </a>
      </div>
    </div>
  </div>
  
  <main class="container mx-auto px-4 py-12 max-w-7xl">
    <!-- Filter Section -->
    <div class="mb-8">
      <h2 class="text-2xl font-bold text-gray-800 dark:text-gray-100 mb-4">Filter by Tag</h2>
      <div class="flex flex-wrap gap-2">
        <button 
          class="filter-btn px-4 py-2 rounded-full font-medium transition-colors duration-200 bg-blue-600 text-white dark:bg-blue-700"
          data-tag="all"
        >
          All
        </button>
        {allTags.map((tag) => (
          <button 
            class="filter-btn px-4 py-2 rounded-full font-medium transition-colors duration-200 bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-200 hover:bg-gray-300 dark:hover:bg-gray-600"
            data-tag={tag}
          >
            {tag}
          </button>
        ))}
      </div>
    </div>

    <!-- Video Grid -->
    <div id="video-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {videos.map((video) => (
        <VideoCard video={video} />
      ))}
    </div>

    <!-- No results message -->
    <div id="no-results" class="hidden text-center py-12">
      <p class="text-gray-500 dark:text-gray-400 text-lg">No videos found with the selected tag.</p>
    </div>
  </main>

  <footer class="bg-gray-800 dark:bg-gray-950 text-white py-8 mt-16">
    <div class="container mx-auto px-4 text-center">
      <p class="mb-2">&copy; {new Date().getFullYear()} Andrew. All rights reserved.</p>
      <p class="text-gray-400 dark:text-gray-500">Professional Video Editing & Subtitle Services</p>
      <div class="mt-4">
        <a 
          href="/editing/contact" 
          class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold px-6 py-2 rounded-full transition-colors duration-300"
        >
          Contact Us
        </a>
      </div>
    </div>
  </footer>

  <script>
    // Filter functionality
    const filterButtons = document.querySelectorAll('.filter-btn');
    const videoCards = document.querySelectorAll('#video-grid > div');
    const noResults = document.getElementById('no-results');
    const videoGrid = document.getElementById('video-grid');

    filterButtons.forEach(button => {
      button.addEventListener('click', () => {
        const selectedTag = button.getAttribute('data-tag');
        
        // Update active button
        filterButtons.forEach(btn => {
          if (btn === button) {
            btn.classList.remove('bg-gray-200', 'dark:bg-gray-700', 'text-gray-700', 'dark:text-gray-200', 'hover:bg-gray-300', 'dark:hover:bg-gray-600');
            btn.classList.add('bg-blue-600', 'dark:bg-blue-700', 'text-white');
          } else {
            btn.classList.remove('bg-blue-600', 'dark:bg-blue-700', 'text-white');
            btn.classList.add('bg-gray-200', 'dark:bg-gray-700', 'text-gray-700', 'dark:text-gray-200', 'hover:bg-gray-300', 'dark:hover:bg-gray-600');
          }
        });

        // Filter videos
        let visibleCount = 0;
        videoCards.forEach(card => {
          const cardTags = card.getAttribute('data-tags') || '';
          const tagsArray = cardTags.split(',');
          
          if (selectedTag === 'all' || tagsArray.includes(selectedTag)) {
            card.classList.remove('hidden');
            visibleCount++;
          } else {
            card.classList.add('hidden');
          }
        });

        // Show/hide no results message
        if (visibleCount === 0) {
          videoGrid?.classList.add('hidden');
          noResults?.classList.remove('hidden');
        } else {
          videoGrid?.classList.remove('hidden');
          noResults?.classList.add('hidden');
        }
      });
    });
  </script>
</Layout>

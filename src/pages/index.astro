---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import VideoCard from '../components/VideoCard.astro';
import ThemeToggle from '../components/ThemeToggle.astro';
import { videos, allTags } from '../data/videos';
---

<Layout title="Andrew's Video Editing Portfolio">
  <ThemeToggle />
  <Header />
  
  <main class="container mx-auto px-4 py-12 max-w-7xl">
    <!-- Filter Section -->
    <div class="mb-8">
      <h2 class="text-2xl font-bold text-gray-800 dark:text-gray-100 mb-4">Filter by Tag</h2>
      <div class="flex flex-wrap gap-2">
        <button 
          class="filter-btn px-4 py-2 rounded-full font-medium transition-colors duration-200 bg-blue-600 text-white dark:bg-blue-700"
          data-tag="all"
        >
          All
        </button>
        {allTags.map((tag) => (
          <button 
            class="filter-btn px-4 py-2 rounded-full font-medium transition-colors duration-200 bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-200 hover:bg-gray-300 dark:hover:bg-gray-600"
            data-tag={tag}
          >
            {tag}
          </button>
        ))}
      </div>
    </div>

    <!-- Video Grid -->
    <div id="video-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {videos.map((video) => (
        <VideoCard video={video} />
      ))}
    </div>

    <!-- No results message -->
    <div id="no-results" class="hidden text-center py-12">
      <p class="text-gray-500 dark:text-gray-400 text-lg">No videos found with the selected tag.</p>
    </div>
  </main>

  <footer class="bg-gray-800 dark:bg-gray-950 text-white py-8 mt-16">
    <div class="container mx-auto px-4 text-center">
      <p class="mb-2">&copy; {new Date().getFullYear()} Andrew. All rights reserved.</p>
      <p class="text-gray-400 dark:text-gray-500">Professional Video Editing & Subtitle Services</p>
    </div>
  </footer>

  <script>
    // Filter functionality
    const filterButtons = document.querySelectorAll('.filter-btn');
    const videoCards = document.querySelectorAll('#video-grid > div');
    const noResults = document.getElementById('no-results');
    const videoGrid = document.getElementById('video-grid');

    filterButtons.forEach(button => {
      button.addEventListener('click', () => {
        const selectedTag = button.getAttribute('data-tag');
        
        // Update active button
        filterButtons.forEach(btn => {
          if (btn === button) {
            btn.classList.remove('bg-gray-200', 'dark:bg-gray-700', 'text-gray-700', 'dark:text-gray-200', 'hover:bg-gray-300', 'dark:hover:bg-gray-600');
            btn.classList.add('bg-blue-600', 'dark:bg-blue-700', 'text-white');
          } else {
            btn.classList.remove('bg-blue-600', 'dark:bg-blue-700', 'text-white');
            btn.classList.add('bg-gray-200', 'dark:bg-gray-700', 'text-gray-700', 'dark:text-gray-200', 'hover:bg-gray-300', 'dark:hover:bg-gray-600');
          }
        });

        // Filter videos
        let visibleCount = 0;
        videoCards.forEach(card => {
          const cardTags = card.getAttribute('data-tags') || '';
          const tagsArray = cardTags.split(',');
          
          if (selectedTag === 'all' || tagsArray.includes(selectedTag)) {
            card.classList.remove('hidden');
            visibleCount++;
          } else {
            card.classList.add('hidden');
          }
        });

        // Show/hide no results message
        if (visibleCount === 0) {
          videoGrid?.classList.add('hidden');
          noResults?.classList.remove('hidden');
        } else {
          videoGrid?.classList.remove('hidden');
          noResults?.classList.add('hidden');
        }
      });
    });
  </script>
</Layout>
